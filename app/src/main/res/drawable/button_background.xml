<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/blue" /> <!-- Inner fill color -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" /> <!-- Border color -->
    <corners android:radius="4dp" /> <!-- Corner radius -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding inside the button -->
</shape>
